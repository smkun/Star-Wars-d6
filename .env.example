# MySQL Database Connection
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control

# Format: mysql://username:password@host:port/database
MYSQL_URL=mysql://your_username:your_password@your_host:3306/gamers_d6Holochron

# Example:
# MYSQL_URL=mysql://dbuser:secretpass@mysql.example.com:3306/gamers_d6Holochron

# Firebase Admin SDK Service Account (for authentication)
# Path to your Firebase service account JSON file
# Download from: Firebase Console → Project Settings → Service Accounts → Generate New Private Key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/firebase-admin-key.json

# Alternative: Store Firebase service account as JSON string (less recommended)
# FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"...","private_key":"..."}'
