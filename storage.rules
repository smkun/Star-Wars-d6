rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Aliens images - public read, admin write
    match /aliens/{file} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
